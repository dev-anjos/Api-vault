        <input type="text" name="firstName" id="firstName" class="form-control mt-2" placeholder="Seu nome" required autofocus>

        <label for="lastName" class="sr-only">Sobrenome</label>
        <input type="text" name="lastName" id="lastName" class="form-control mt-2" placeholder="Seu sobrenome" required>

