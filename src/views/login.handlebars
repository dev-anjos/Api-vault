<div class="text-center container-form">
    <form class="form-signin" action="/api/session/login" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Faça login</h1>

        <label for="email"  class="sr-only">Endereço de email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Seu email" required autofocus>

        <label for="password" class="sr-only">Senha</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Senha" required>

        <button class="btn btn-lg btn-primary btn-block mt-2" type="submit">Login</button>
    </form>

    <div class="text-center">
        <span><strong>OU</strong></span>
        <a
            class="btn btn-lg btn-primary btn-block mt-2" type="submit"\
            style="background-color: black ; color: white"
            href="/api/session/loginwithgithub">
            Login com GitHub
        </a>
        <a class="mt-1 mb-3 btn btn-lg btn-primary btn-block" href="/api/view/register" >Cadastrar</a>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    </div>

</div>
